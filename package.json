{
  "name": "instalador-programas-chocolatey",
  "version": "1.0.0",
  "description": "Instalador de programas com Chocolatey usando Electron",
  "main": "main.js",
  "author": "Marco Antonio Vivas",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.4.5"
  },
  "build": {
    "appId": "com.seu-dominio.instalador-programas",
    "productName": "Instalador de Programas",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "allowElevation": true
    }
  }
}
